        PreparedStatement pstmt = null; 
        try {Class.forName("com.mysql.jdbc.Driver"); 
con = DriverManager.getConnection("jdbc:mysql://localhost:3306/telephone_db", "root", "Root123"); 
String sql = "INSERT INTO tbl_telephone(name, phone_number, email, address) VALUES (?, ?, ?, ?)"; 
            pstmt = con.prepareStatement(sql); 
            pstmt.setString(1, name); 
            pstmt.setString(2, phone); 
            pstmt.setString(3, email); 
            pstmt.setString(4, address); 
int rowsAffected = pstmt.executeUpdate(); 
            if (rowsAffected > 0) {out.println("<p style='color:green;'>Contact added successfully!</p>");} }  
catch (Exception e) {e.printStackTrace(); 
